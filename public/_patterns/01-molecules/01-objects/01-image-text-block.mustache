{{#image-text-block}}
  <section class="c-image-text-block  o-layout o-layout--align-middle {{#reverse}}o-layout--reverse{{/reverse}}">
    <div class="o-layout__cell u-fraction--6of12">
      <img src="{{{image-url}}}" alt="">
    </div>
    <div class="o-layout__cell o-layout__cell--center u-fraction--4of12">
      <div class="c-image-text-block__content">
        <h3 class="c-image-text-block__pre-header">{{pre-header}}</h3>
        <h2 class="c-image-text-block__header">{{header}}</h2>
        <p class="c-image-text-block__text">{{text}}</p>
        <button class="c-button c-button--gradient">{{button}}</button>
      </div>
    </div>
  </section>
{{/image-text-block}}
